<div class="home-exchange">
	<div class="container">
		<div class="home-exchange__wrapper">
			<div class="home-exchange__wrap home-exchange__wrap--left">
				{% include '../../components/select/select.twig' with {
					class:'select--exchange',
					selected:'Все',
					select:[
						{
							'value':'all',
							'id':'all',
							'name':'Все',
							'checked':true,
							'type':'currentSelect'
						},
						{
							'value':'usd',
							'id':'usd',
							'name':'USD',
							'checked':false,
							'type':'currentSelect'
						},
						{
							'value':'cash',
							'id':'cash',
							'name':'cash',
							'checked':false,
							'type':'currentSelect'
						},
						{
							'value':'crypto',
							'id':'crypto',
							'name':'crypto',
							'checked':false,
							'type':'currentSelect'
						},
						{
							'value':'stablecoin',
							'id':'stablecoin',
							'name':'stablecoin',
							'checked':false,
							'type':'currentSelect'
						},
					]
				} only %}
				<div class="home-exchange__item">
					<h3 class="home-exchange__title">
						{{ "Вы отдаёте" }}
					</h3>
					<ul class="list-currency list-reset">
						{% for item in currencyList %}
							<li class="list-currency__item">
								<input class="list-currency__input" type="radio" name="currency"
								       id="{{ item.id }}" {{ item.checked ? ' checked' }}>
								<label for="{{ item.for }}" class="list-currency__label">
									{{ item.name }}
									<img src="{{ item.icon }}" alt="{{ item.id }}">
								</label>
							</li>
						{% endfor %}
					</ul>
				</div>
			</div>
			<div class="home-exchange__wrap home-exchange__wrap--right">
				{% include '../../components/select/select.twig' with {
					class:'select--exchange',
					selected:'Все',
					select:[
						{
							'value':'all2',
							'id':'all2',
							'name':'Все',
							'checked':true,
							'type':'getSelect'
						},
						{
							'value':'usd2',
							'id':'usd2',
							'name':'USD',
							'checked':false,
